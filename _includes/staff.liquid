<div class="instructors clearfix">
  {% for instructor in site.data.staff.Instructors %}
  <div class="instructor-profile-two-col">
    <a href="{{ instructor.url }}" target="_blank">
      <img src="{{ instructor.image | prepend: '/assets/img/' | relative_url }}" alt="Instructor image" />
    </a>
    <ul class="instructor-info">
      <li><span>Instructor:</span> <a href="{{ instructor.url }}" target="_blank">{{ instructor.name }}</a></li>
      <li><span>Email:</span> <a href="mailto:{{ instructor.email | encode_email }}" target="_blank">{{ instructor.email }}</a></li>
      <li><span>Office hours:</span> {{ instructor.office-hours }}</li>
    </ul>
  </div>
  {% endfor %}
</div>

<style>
  .instructors {
    padding: 0 0 0 1%;
  }

  .instructor-profile-two-col {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    width: 50%;
    margin-bottom: 20px;
  }

  .instructor-profile-two-col img {
    border-radius: 50%;
    object-fit: cover;
    height: 100px;
    width: 100px;
    margin-right: 10px;
  }

  .instructor-info {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .instructor-info li {
    margin-bottom: 5px;
  }

  .instructor-info a {
    color: #007bff; /* Replace with your desired theme color */
    text-decoration: none;
  }

  .instructor-info a:hover {
    text-decoration: underline;
  }

  .instructor-info span {
    font-weight: bold;
  }
</style>
